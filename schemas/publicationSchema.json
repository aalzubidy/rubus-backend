{
  "$schema": "http://json-schema.org/schema#",
  "title": "publicationSchema",
  "type": "object",
  "required": [
    "type",
    "author",
    "title",
    "doi",
    "url"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "example": "article"
    },
    "author": {
      "type": "string",
      "example": "some full name, some full name"
    },
    "editor": {
      "type": ["string", "null"],
      "example": "some full name, some full name"
    },
    "title": {
      "type": "string",
      "example": "some article title"
    },
    "book_title": {
      "type": ["string", "null"],
      "example": "some book title"
    },
    "year": {
      "type": ["string", "number", "null"],
      "example": "2020"
    },
    "publisher": {
      "type": ["string", "null"],
      "example": "some publisher"
    },
    "address": {
      "type": ["string", "null"],
      "example": "Seattle, WA"
    },
    "pages": {
      "type": ["string", "number", "null"],
      "example": "122-300"
    },
    "isbn": {
      "type": ["string", "number", "null"],
      "example": "978-3-16-148410-0"
    },
    "doi": {
      "type": ["string", "number"],
      "example": "10.1093/1234"
    },
    "url": {
      "type": ["string", "null"],
      "example": "https://example.com/doi/10.1093/1234"
    },
    "journal": {
      "type": ["string", "null"],
      "example": "some journal title"
    },
    "volume": {
      "type": ["string", "number", "null"],
      "example": "1"
    },
    "abstract": {
      "type": ["string", "null"],
      "example": "some abstract"
    },
    "issn": {
      "type": ["string", "number", "null"],
      "example": "2049-3630"
    },
    "location": {
      "type": ["string", "null"],
      "example": "WA"
    },
    "keywords": {
      "type": ["string", "object", "null"],
      "example": "some keywords"
    },
    "month": {
      "type": ["string", "number", "null"],
      "example": "Jan"
    },
    "obtained_bibtex": {
      "type": ["string", "object", "array", "null"]
    },
    "generated_bibtex": {
      "type": "string",
      "example": "@article{somebibtex}"
    },
    "create_date": {
      "type": "string",
      "example": "2011-10-05T14:48:00.000Z"
    }
  }
}
